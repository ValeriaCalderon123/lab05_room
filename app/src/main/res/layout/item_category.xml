<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/nameCategory"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="18sp"
                tools:text="AVES" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/nameCategory"
                android:layout_toRightOf="@+id/nameCategory"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ESTA CATEGORIA ES ESPECIAL" />

                <TextView
                    android:id="@+id/number_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21 animales en extincion" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/nameCategory"
                    android:layout_toRightOf="@+id/nameCategory"

                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Activo:  " />
                <TextView
                    android:id="@+id/status_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="TRUE" />
</LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>